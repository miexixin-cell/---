<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>抽獎模擬器</title>
</head>
<body>
  <h1>我的抽獎模擬器</h1>
  <button onclick="draw()">抽一個</button>
  <p id="result"></p>

<script>
const items = ["選項A", "選項B", "選項C", "選項D"];
function draw() {
  const i = Math.floor(Math.random() * items.length);
  document.getElementById("result").innerText = "抽到：" + items[i];
}
</script>
</body>
</html>
